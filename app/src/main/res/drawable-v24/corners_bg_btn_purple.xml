<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_purple_1" />
            <stroke android:width="@dimen/btn_padding" android:color="@android:color/transparent" />
            <corners android:radius="50dp" />
            <padding android:bottom="@dimen/btn_padding" android:left="@dimen/btn_padding" android:right="@dimen/btn_padding" android:top="@dimen/btn_padding" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="180" android:endColor="@color/btn_purple_2" android:startColor="@color/btn_purple_1" />
            <stroke android:width="@dimen/btn_padding" android:color="@android:color/transparent" />
            <corners android:radius="50dp" />
            <padding android:bottom="@dimen/btn_padding" android:left="@dimen/btn_padding" android:right="@dimen/btn_padding" android:top="@dimen/btn_padding" />
        </shape>
    </item>
</selector>